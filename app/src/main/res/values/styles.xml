<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/opaque_silver</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/sun_color</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dark_mode</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <!--button color-->
        <item name="android:textColor">@color/colorAccent</item>
        <!--text color-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>